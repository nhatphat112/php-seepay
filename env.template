# Sepay Configuration Template
# Copy this file to .env and fill in your actual values
# Command: cp env.template .env

# Sepay API Credentials
# Lấy từ Sepay Dashboard: https://dashboard.sepay.vn
sepay_MERCHANT_ID=your_merchant_id_here
sepay_API_SECRET=your_api_secret_here

# Environment: sandbox hoặc production
# - sandbox: Dùng cho testing
# - production: Dùng cho live
sepay_ENV=sandbox

# Webhook Secret (for verifying webhook signatures)
# Lấy từ Sepay Dashboard → Webhooks section
sepay_WEBHOOK_SECRET=your_webhook_secret_here

